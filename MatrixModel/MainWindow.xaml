<Window x:Class="MatrixModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="218" Width="517" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Name="MainGrid" Margin="0,0,-8,19">
        <Grid.RowDefinitions>
            <RowDefinition Height="50px" />
            <RowDefinition Height="auto"  />
                   </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">

            <Label Content=" .Net Decompile To Concept Explorer" Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontStyle="Italic" FontSize="24"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,10,0,40" >
            <Button x:Name="btnLoad"  Content="Load File " Click="Load" Grid.Row="1" Width="400" Height="30" Margin="0,0,0,10" />
            <Button x:Name="btnRun"  Content="Run" Click="Run" Width="400" Height="30" IsEnabled="False" />

        </StackPanel>

    </Grid>
</Window>
